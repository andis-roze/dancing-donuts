{
  "name": "donuts",
  "version": "0.2",
  "description": "Donut slice experiment",
  "main": "index.js",
  "author": "Andis Roze",
  "license": "MIT",
  "scripts": {
    "dist": "webpack --config ./webpack.config.js",
    "tslint": "tslint 'src/**/*.ts' --format stylish",
    "watch": "webpack --watch",
    "start": "webpack-dev-server",
    "test": "JEST_JUNIT_OUTPUT=./test-results/junit.xml jest",
    "coverage": "jest --coverage",
    "deploy": "./scripts/publish.sh"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "src/.*\\.spec\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "reporters": [ "default", "jest-junit" ]
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.9",
    "autoprefixer": "^9.3.1",
    "css-loader": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "mini-css-extract-plugin": "^0.4.4",
    "postcss-loader": "^3.0.0",
    "precss": "^3.1.2",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tscss": "^0.2.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-loader": "^3.5.4",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "engines": {
    "yarn": "^1.12.1"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
