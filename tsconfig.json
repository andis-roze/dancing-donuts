{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": false,
    "allowJs": false,
    "lib": ["es6", "dom"],
    "target": "es5",
    "newLine": "LF",
    "baseUrl": "./",
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
